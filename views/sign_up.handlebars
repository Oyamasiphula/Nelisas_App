<div class="form">

      <ul class="tab-group">
        <li class="tab active"><a href="/">Sign Up</a></li>
        <li class="tab"><a href="/sign_in">Sign In</a></li>
      </ul>

    <div class="tab-content">
        <div id="sign_up">
          <h1>Sign Up for Free</h1>
          {{#if message}}
              <div class="alert alert-danger">{{message}}</div>
          {{/if}}
          <form action="/" method="post">
              <div class="top-row">
                <div class="field-wrap">
                  <label>
                    Choose username<span class="req">*</span>
                  </label>
                  <input type="text" placeholder="username" name="username" required autocomplete="off"/>
                </div>
              </div>
          <br>
              <div class="top-row">
                <div class="field-wrap">
                <label>
                  Set A Password<span class="req">*</span>
                </label>
                <input type="password" placeholder="re-enter password" name="password" required autocomplete="off"/>
                </div>
              </div>
          <br>
              <button type="submit" class="button button-block"/>Get Started</button>
          </form>
        </div>
    </div><!-- tab-content -->
</div> <!-- /form -->

<link rel="stylesheet" type="text/css" href="/css/singUpORsignIn.css">
